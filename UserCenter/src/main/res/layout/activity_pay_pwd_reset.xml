<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              style="@style/MatchMatch.Vertical.White">

    <com.yizhipin.base.widgets.HeaderBar
        android:id="@+id/mHeaderBar"
        style="@style/MatchWrap"
        app:titleText="@string/reset_pay_pwd"/>

    <LinearLayout
        style="@style/MatchWrap.Horizontal"
        android:paddingLeft="@dimen/yPadding"
        android:paddingRight="@dimen/yPadding"
        >

        <TextView
            style="@style/WrapWrap"
            android:text="@string/phone"
            android:textColor="@color/yBlackLight"
            android:textSize="@dimen/yTextMiddleSize"/>

        <EditText
            android:id="@+id/mMobileEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yEditHeight"
            android:layout_marginLeft="@dimen/yPaddingMiddle"
            android:background="@null"
            android:hint="@string/input_mobile"
            android:inputType="phone"
            android:maxLength="11"
            android:textColor="@color/yBlackLight"
            android:textColorHint="@color/yHint"
            android:textSize="@dimen/yTextMiddleSize"/>
    </LinearLayout>

    <View
        style="@style/DividerFixedHeight"
        android:layout_marginLeft="@dimen/yPadding"
        android:layout_marginRight="@dimen/yPadding"/>

    <RelativeLayout
        style="@style/MatchWrap.Horizontal"
        android:paddingLeft="@dimen/yPadding"
        android:paddingRight="@dimen/yPadding">

        <TextView
            android:id="@+id/mCodeTv"
            style="@style/WrapWrap"
            android:layout_centerVertical="true"
            android:text="@string/code"
            android:textColor="@color/yBlackLight"
            android:textSize="@dimen/yTextMiddleSize"/>

        <EditText
            android:id="@+id/mCodeEt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/yEditHeight"
            android:layout_marginLeft="@dimen/yPaddingMiddle"
            android:layout_toLeftOf="@+id/mSendCodeTv"
            android:layout_toRightOf="@+id/mCodeTv"
            android:background="@null"
            android:hint="@string/input_code"
            android:inputType="number"
            android:textColor="@color/yBlackLight"
            android:textColorHint="@color/yHint"
            android:textSize="@dimen/yTextMiddleSize"/>

        <TextView
            android:id="@+id/mSendCodeTv"
            style="@style/WrapWrap"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/get_code"
            android:textColor="@color/yBlue"
            android:textSize="@dimen/yTextMiddleSize"/>

    </RelativeLayout>

    <View
        style="@style/DividerFixedHeight"
        android:layout_marginLeft="@dimen/yPadding"
        android:layout_marginRight="@dimen/yPadding"/>

    <TextView
        style="@style/WrapWrap"
        android:layout_marginTop="@dimen/yPaddingBigSmall"
        android:padding="@dimen/yPadding"
        android:text="@string/set_new_pay_pwd"
        android:textColor="@color/yBlackLight"
        android:textSize="@dimen/yTextMiddleSize"/>

    <com.yizhipin.base.widgets.PayPasswordView
        android:id="@+id/mPayView"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/yPadding"
        android:layout_marginRight="@dimen/yPadding"
        android:background="#ffffffff"
        app:bgCorner="5dp"
        app:bgSize="1dp"
        app:divisionLineColor="@color/yDivider"
        app:passwordNumber="6"/>

    <Button
        android:id="@+id/mPayBtn"
        style="@style/FullBtnStyle"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/yPaddingBigLar"
        android:layout_marginTop="@dimen/yPaddingBigSmall"
        android:enabled="true"
        android:layout_marginRight="@dimen/yPaddingBigLar"
        android:paddingLeft="@dimen/yPaddingBig"
        android:paddingRight="@dimen/yPaddingBig"
        android:text="@string/save"
        android:textSize="@dimen/yTextBigSize"/>

</LinearLayout>
